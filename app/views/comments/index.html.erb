
<h1>Listing comments</h1>
 
<table border="1">
  <tr>
    <th>Content</th>
    <th>Image</th>
    <th></th>
  </tr>
 
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.image %></td>
      <td><%= link_to 'Show', comment_path(comment) %></td>
    </tr>
  <% end %>
</table>